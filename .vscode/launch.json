    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: in workspace",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: in directory",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "purpose": [
                "debug-in-terminal"
            ],
            "cwd": "${fileDirname}"
        }
    ]
}